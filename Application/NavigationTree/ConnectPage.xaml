<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:navigationTree="clr-namespace:Application.NavigationTree"
             x:Class="Application.ConnectPage">
    <ContentPage.BindingContext>
        <navigationTree:ConnectPageViewModel />
    </ContentPage.BindingContext>
    <ContentPage.Content>
        <StackLayout>
            <Button Text="Connect" Command="{Binding StartNfcCommand}"></Button>
            <Label Text="{Binding Content}"></Label>
            <Label Text="{Binding Status}"></Label>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>